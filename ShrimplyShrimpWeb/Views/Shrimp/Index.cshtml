@model IEnumerable<Shrimp>

@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Shrimp List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Shrimp" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> &nbsp; Create New Shrimp
            </a>
        </div>
    </div>
    <br />



<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                Shrimp Name
            </th>
            <th>
                Display Order
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var shrimp in Model)
        {
            <tr>
                <td width="50%">
                    @shrimp.Name
                </td>
                <td width="30%">
                    @shrimp.DisplayOrder
                </td>
            </tr>            
        }
    </tbody>
</table>
</div>