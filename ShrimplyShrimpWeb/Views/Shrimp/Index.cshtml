@model IEnumerable<Shrimp>

@{
    ViewData["Title"] = "Index";
}


<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Shrimp List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Shrimp" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> &nbsp; Create New Shrimp
            </a>
        </div>
    </div>
    <br />



    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>
                    Shrimp Name
                </th>
                <th>
                    Display Order
                </th>
                <th>

                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var shrimp in Model)
            {
                <tr>
                    <td width="50%">
                        @shrimp.Name
                    </td>
                    <td width="30%">
                        @shrimp.DisplayOrder
                    </td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Shrimp" asp-action="Edit" asp-route-id="@shrimp.Id" class="btn btn-primary mx-2">
                                <i class="bi bi-pencil-square"></i> Edit
                            </a>
                            <a asp-controller="Shrimp" asp-action="Delete" asp-route-id="@shrimp.Id" class="btn btn-danger mx-2">
                                <i class="bi bi-trash-fill"></i> Delete
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>